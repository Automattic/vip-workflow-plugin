{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/admin.php?page=vw-custom-status",
  "preferredVersions": {
    "php": "8.0",
    "wp": "latest"
  },
  "features": {
    "networking": true
  },
  "login": true,
  "steps": [
      {
        "step": "defineWpConfigConsts",
        "consts": {
            "WP_DEBUG": true
        }
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "url",
        "url": "https://github-proxy.com/proxy/?repo=Automattic/vip-workflow-plugin&branch=fix/blueprint-install"
      },
      "options": {
        "activate": true,
        "targetFolderName": "vip-workflow-plugin"
      }
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/Automattic/vip-workflow-plugin/trunk/vip-workflow-content.xml"
      }
    }
  ]
}
