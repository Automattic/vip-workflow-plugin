{
  "name": "automattic/vip-workflow",
  "description": "WordPress plugin to add additional editorial workflow capabilities to WordPress.",
  "type": "wordpress-plugin",
  "license": "GPL-3.0+",
  "support": {
    "issues": "https://github.com/Automattic/vip-workflow-plugin/issues",
    "source": "https://github.com/Automattic/vip-workflow-plugin"
  },
  "require": {
    "composer/installers": "~1.0",
    "php": ">=8.0"
  },
  "require-dev": {
    "automattic/vipwpcs": "^3.0",
    "exussum12/coverage-checker": "^1.0.0",
    "phpunit/phpunit": "^9.0",
    "yoast/phpunit-polyfills": "^2.0"
  },
  "scripts": {
    "cs": [
      "@php ./vendor/bin/phpcs -p -s -v -n . --standard=\"phpcs.xml.dist\" --extensions=php --ignore=\"/vendor/*,/node_modules/*,/tests/*\""
    ],
    "cbf": [
      "@php ./vendor/bin/phpcbf -p -s -v -n . --standard=\"phpcs.xml.dist\" --extensions=php --ignore=\"/vendor/*,/node_modules/*,/tests/*\""
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
